#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'dc/metrics'

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# (If you use this, don't forget to add pry to your Gemfile!)
# require "pry"
# Pry.start

require 'irb'
require 'byebug'

Dc::Metrics.configure do |config|
  config.caller               = 'gem_development'
  config.environment          = 'test'
  config.gcp_project_id       = 'deliverycenter-stag'
  config.pubsub_topic_name    = 'dc-logging-metrics'
  # Path to you local credentials file if needed.
  config.gcp_credentials_path = 'path/to/file'
end

Dc::Metrics.debug('Message test!', {
                    action: 'CREATE_PRODUCT',
                    direction: 'INCOMING',
                    source_type: 'PROVIDER',
                    source_name: 'MY_PROVIDER',
                    root_resource_type: 'PRODUCT',
                    ext_root_resource_id: 'EXT1234',
                    int_root_resource_id: '6789',
                    int_store_id: 100
                  })

IRB.start(__FILE__)
